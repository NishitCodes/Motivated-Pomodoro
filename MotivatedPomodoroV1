SetTimer, BreakCheck, 120000
SetTimer, Reminder, 600000 ;Posture reminder

BreakCheck:
if((A_Hour = 11 or A_Hour = 14 or A_Hour = 17 or A_Hour = 20 or A_Hour = 23) and (29<=A_Min and A_Min<=31))
{
Goto, LongBreak
}else{
if(44<=A_Min and A_Min<=46)
{
Goto, ShortBreak
}
}
return

Reminder:
QuoteNo = % Quotes1.Length() + Quotes2.Length() + Quotes3.Length()
Random, rand, 1, %QuoteNo%

if (0 < rand and rand < 34) {
	msg := Quotes1[rand]
} else if (33 < rand and rand < 125) {
    rand -= 33
    msg := Quotes2[rand]
} else {
    rand -= 124
    msg := Quotes3[rand]
}

TrayTip, Sit Properly, %msg%, 0, 32

if WinExist("ahk_class ApplicationFrameWindow"){
	WinActivate  ; Uses the last found window.
	SetTitleMatchMode, 2
	IfWinActive, Microsoft To Do
	{
	}
}

;SplashImage, C:\Users\Rathore\Pictures\IMG_0133.JPG

Sleep, 500
SplashImage, Off
return

ShortBreak:
SplashTextOn , , Hello, Short Break in 20 Seconds
Sleep, 20000 ;Length of time to remind before break
BlockInput, On
SplashTextOff
    Run rundll32.exe user32.dll`,LockWorkStation     ; Lock PC
    Sleep 1000
    SendMessage 0x112, 0xF170, 2, , Program Manager  ; Monitor off
Sleep, 540000 ;Length of break
BlockInput, Off
MouseMove, 1, 1, 0, R
return

LongBreak:
SplashTextOn , , Hello, Long Break in 30 Seconds
Sleep, 30000 ;Length of time to remind before break
BlockInput, On
SplashTextOff
Sleep, 300
Run, https://docs.google.com/spreadsheets/u/1/d/1vfb5KEQo2IyDna2SA_k4s1wtDCrhObew
Sleep, 1000
DllCall("PowrProf\SetSuspendState", "int", 0, "int", 1, "int", 0)  ;makes PC go to sleep
BlockInput, Off
return

Pause::Pause ; Assign the toggle-pause function to the "pause" key...
return

^!r::
Reload
Sleep 1000 ; If successful, the reload will close this instance during the Sleep, so the line below will never be reached.
MsgBox, 4,, The script could not be reloaded. Would you like to open it for editing?
IfMsgBox, Yes, Edit
return
